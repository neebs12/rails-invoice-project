<h1>Invoices Here</h1>

<%# buttons %>
<ul>
  <li><button type="button">(+ New Invoice)</button></li>
  <li><button type="button">(+ New Client)</button></li>
</ul>

<%# list the invoices beneath this line %>
<% if @invoices.any? %>
  <table>
    <tr>
      <th>Invoice no.</th>
      <th>Client Email</th>
      <th>Invoice Total</th>
      <th>Buttons</th>
    </tr>
    <% @invoices.each do |invoice|%>
      <tr>
        <th>
          <%= link_to "INV_#{invoice.id}", invoice_path(invoice) %>
        </th>
        <th>
          <%= invoice.client.name %>
        </th>
        <th>
          <%= @totals[invoice] %>
        </th>
        <th><button type="button">📝</button> <button type="button">🗑️</button></th>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>There are no invoices to be displayed. Please create an invoice 🙏 </p>
<% end %>